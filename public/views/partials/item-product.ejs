<% if (products_read.length != 0) { %>
    <% for (let i = 0; i < products_read.length; i++) { %>
        <div id="<%= products_read[i].id %>" class="item p-2 col-12 col-md-3 col-lg-4 bg-body rounded" data-product="<%= JSON.stringify(products_read[i]) %>">
            <div class="item-image">
                <img class="rounded" src=<%= products_read[i].thumbnail %> alt="product">
            </div>
            <div class="item-info p-3">
                <div class="item-info">
                    <h4 class="item-name"><%= products_read[i].title %></h4>
                </div>
                <div class="item-price-container mb-4">
                    <span class="fw-bold item-price">$<%= products_read[i].price %></span>
                </div>
            </div>
            <div class="w-100 ">
                <button class="btn btn-primary">Agregar al carrito</button>
            </div>
        </div>
    <% }  %>

<% } else {%>
    <h4> Aún no hay productos cargados.</h4>
    <p>Prueba cargar uno acá: <a href="/agregar-producto">Agregar producto</a></p>
<% } %>
